<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textTitleColor"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/call_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/log_btn"
        android:layout_marginStart="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/imbutton"
        android:src="@mipmap/call" />

    <ImageButton
        android:id="@+id/audio_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/call_btn"
        android:layout_marginEnd="87dp"
        android:background="@drawable/imbutton"
        android:src="@mipmap/alarm" />

    <ImageButton
        android:id="@+id/log_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/send_msg_btn"
        android:layout_marginStart="19dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/imbutton"
        android:src="@mipmap/location" />

    <ImageButton
        android:id="@+id/imageBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/log_btn"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="38dp"
        android:background="@drawable/imbutton"
        android:src="@mipmap/camera_1" />

    <ImageButton
        android:id="@+id/record_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/send_msg_btn"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/audio_btn"
        android:background="@drawable/imbutton"
        android:src="@mipmap/recordg" />

    <ImageButton
        android:id="@+id/send_msg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:background="@drawable/center"
        android:src="@mipmap/gol2" />

    <TextView
        android:id="@+id/select_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num_2"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="SELECTED CONTACTS"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num_1"
        android:layout_toStartOf="@+id/num_1"
        android:background="@drawable/imbutton"
        android:src="@mipmap/cg" />

    <TextView
        android:id="@+id/num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/call_btn"
        android:layout_below="@+id/select_txt"
        android:background="#fff997"

        android:padding="5dp"
        android:text="NAME"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num_2"
        android:layout_toEndOf="@+id/call_btn"
        android:background="@drawable/imbutton"
        android:src="@mipmap/cg" />

    <TextView
        android:id="@+id/num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/num_3"
        android:layout_alignBottom="@+id/num_3"
        android:layout_toEndOf="@+id/imageButton8"
        android:background="#fff997"
        android:padding="5dp"
        android:text="NAME"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/num_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num_5"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/imageButton7"
        android:background="#fff997"
        android:padding="5dp"
        android:text="NAME"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/num_5"
        android:layout_below="@+id/select_txt"
        android:background="@drawable/imbutton"
        android:src="@mipmap/cg" />

    <TextView
        android:id="@+id/num_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num_5"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageButton9"
        android:background="#fff997"
        android:padding="5dp"
        android:text="NAME"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/select_txt"
        android:layout_alignTop="@+id/num_4"
        android:background="@drawable/imbutton"
        android:src="@mipmap/cg" />

    <TextView
        android:id="@+id/num_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/imageBtn"
        android:background="#fff997"
        android:padding="5dp"
        android:text="NAME"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num_4"
        android:layout_toStartOf="@+id/num_5"
        android:background="@drawable/imbutton"
        android:src="@mipmap/cg" />
</RelativeLayout>