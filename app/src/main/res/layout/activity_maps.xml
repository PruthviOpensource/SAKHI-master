<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="info.androidhive.materialtabs.activity.MapsActivity" />


    <ImageButton
        android:id="@+id/woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:background="#000"
        android:src="@drawable/w" />

    <ImageButton
        android:id="@+id/toilets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/woman"
        android:layout_marginTop="32dp"
        android:background="#000"
        android:src="@drawable/comtoi" />

    <ImageButton
        android:id="@+id/doctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toilets"
        android:layout_marginTop="32dp"
        android:background="#000"
        android:src="@drawable/comdust" />

    <ImageButton
        android:id="@+id/medical_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/doctors"
        android:layout_marginTop="32dp"
        android:background="#000"
        android:src="@drawable/m" />

</RelativeLayout>
